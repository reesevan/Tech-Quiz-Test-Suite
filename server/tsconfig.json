{
  "compilerOptions": {
    "target": "ES2020",                      // Allows top-level await
    "module": "NodeNext",                    // Supports import.meta and JSON imports
    "moduleResolution": "NodeNext",          // Works well with ES modules and .json
    "resolveJsonModule": true,               // Enable JSON imports
    "esModuleInterop": true,                 // Helps with `import x from 'y'`
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
